<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_margin_short"
    android:layout_marginTop="@dimen/horizontal_margin_short"
    android:layout_marginEnd="@dimen/horizontal_margin_short"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardMaxElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/vertical_margin_short"
        android:paddingTop="@dimen/horizontal_margin"
        android:paddingBottom="@dimen/horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_step_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="@dimen/item_title_text_size" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/description_arrow_image"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>